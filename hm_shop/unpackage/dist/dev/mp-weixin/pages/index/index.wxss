.home swiper {
  height: 380rpx;
  width: 750rpx;
}
.home swiper image {
  width: 100%;
  height: 100%;
}
.home .nav {
  display: flex;
}
.home .nav .nav_item {
  width: 25%;
  text-align: center;
}
.home .nav .nav_item view {
  width: 80rpx;
  height: 80rpx;
  background: #B50E03;
  border-radius: 60rpx;
  margin: 10rpx auto;
}
.home .nav .nav_item text {
  font-size: 30rpx;
}
.home .hot_goods {
  background: #eee;
  overflow: hidden;
}
.home .tit {
  height: 50px;
  line-height: 50px;
  color: #b50e03;
  text-align: center;
  letter-spacing: 20px;
  background: #fff;
  margin: 10rpx 0;
}
.home .goods_list {
  padding: 0 15rpx;
  display: flex;
  flex-wrap: wrap;
}
.home .goods_list .goods_item {
  background: #fff;
  width: 355rpx;
}
.home .goods_list .goods_item image {
  width: 80%;
  height: 150rpx;
}

